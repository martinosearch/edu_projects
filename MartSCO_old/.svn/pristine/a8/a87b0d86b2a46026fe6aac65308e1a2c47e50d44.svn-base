package multiMedia;

import java.awt.Component;
import java.io.File;
import java.net.URL;
import java.sql.Time;

import javax.swing.JFrame;

public class MartMediaPlayer extends JFrame implements ControllerListener {

	private static URL url;
	private Player monPlayer;
	private static Component visual;

	public static void main(String[] args) {
		MartMediaPlayer player = new MartMediaPlayer();
		player.play();
	}

	private void play() {
		try {
			url = (new File("zic.wav")).toURL();
			monPlayer = Manager.createPlayer(url);
			monPlayer.addControllerListener(this);
			monPlayer.realize();

		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	@Override
	public void controllerUpdate(ControllerEvent e) {
		System.out.println("Etat actuel ===================>>" + e.toString());
		if (e instanceof RealizeCompleteEvent) {
			// état realizing
			monPlayer.prefetch();
		} else if (e instanceof PrefetchCompleteEvent) {
			// état
			if ((visual = (Component) monPlayer.getVisualComponent()) != null)
				getContentPane().add("Center", visual);
		}

		if ((visual = (Component) monPlayer.getVisualComponent()) != null)
			getContentPane().add("Center", visual);

		validate();

		monPlayer.start();

		if (e instanceof EndOfMediaEvent) {
			monPlayer.setMediaTime(new Time(0));
			monPlayer.start();
		}
	}

}
